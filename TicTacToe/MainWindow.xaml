                <RadioButton x:Name="mnu_twoPlayers" Content="Two Players" Checked="mnu_twoPlayers_Checked"/>
            </MenuItem>
            <MenuItem x:Name="mnu_help" Header="Help">
                <MenuItem x:Name="mnu_howToPlay" Header="How to Play" Click="mnu_howToPlay_Click"/>
            </MenuItem>
